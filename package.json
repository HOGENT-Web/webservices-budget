{
  "name": "webservices-budget",
  "version": "1.0.0",
  "description": "Demo application for the course Web Services.",
  "main": "src/index.js",
  "repository": "git@github.com:HOGENT-Web/webservices-budget.git",
  "author": "Thomas Aelbrecht <thomasaelbrecht@live.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "env-cmd nodemon"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "config": "^3.3.9",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
  }
}